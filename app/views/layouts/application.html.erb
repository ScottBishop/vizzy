<!DOCTYPE html>
<html>
<head>
  <title>Vizzy</title>
  <%= render 'application/favicon' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("vizzy-logo.svg", alt: "logo"), '/', class: 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% breadcrumbs(display_single_fragment: true).tap do |links| %>
          <% if links.any? %>
            <p class="navbar-text">
              <% links.each_with_index do |link, index| %>
                <%= link_to link.text, link.url, class: (link.current? ? 'breadcrumb-current navbar-link' : 'navbar-link') %>
                <% if index != links.length - 1 %>
                  /
                <% end %>
              <% end %>
            </p>
          <% end %>
        <% end %>
      </ul>

      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.display_name %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Projects", projects_path %></li>
              <li><%= link_to "Users", users_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <%= link_to image_tag("vizzy-text.svg", class: "img-responsive center-block vizzy-text-padding") %>
    <% end %>
    </div>
  </div>
</nav>
<br>
<div class="container-fluid">
  <%= flash_messages %>
  <%= yield %>
</div>
</body>
</html>
