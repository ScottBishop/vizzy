<% breadcrumb :jiras %>
<h2>Jiras</h2>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Component</th>
      <th>Issue Type</th>
      <th>Priority</th>
    </tr>
  </thead>

  <tbody>
    <% @jiras.each do |jira| %>
      <tr>
        <td><%= link_to jira.id, jira.jira_link  %></td>
        <td><%= link_to jira.title, jira.jira_link %></td>
        <td><%= link_to jira.component, jira.jira_link %></td>
        <td><%= link_to jira.issue_type, jira.jira_link %></td>
        <td><%= link_to jira.priority, jira.jira_link %></td>
      </tr>
    <% end %>
  </tbody>
</table>